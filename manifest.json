{
    "manifest_version": 2,

    "name": "Home Teaching Organizer",
    "description": "Makes it easy to organize home teaching",
    "version": "1.0",

    "permissions": [
        "activeTab", "https://www.lds.org/*", "http://www.lds.org/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Home Teaching Organizer",
        "default_icon": "icon.png"
    }
    
}